<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MenuViews.registerActivity">

        <TextView
                android:text="Account registrieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_textView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textSize="20sp" android:layout_marginTop="60dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Vorname"
                android:ems="10"
                android:id="@+id/vorname_editText" android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/register_textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25" android:textSize="18sp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nachname"
                android:ems="10"
                android:id="@+id/nachname_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/vorname_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Benutzername"
                android:ems="10"
                android:id="@+id/username_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/nachname_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="StraÃŸe und Hausnummer"
                android:ems="10"
                android:id="@+id/adresse_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/username_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25"/>
        <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="PLZ"
                android:ems="10"
                android:id="@+id/plz_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/adresse_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/ort_editText" app:layout_constraintHorizontal_bias="0.75"
                android:imeOptions="actionNext"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ort"
                android:ems="10"
                android:id="@+id/ort_editText"
                app:layout_constraintTop_toBottomOf="@+id/adresse_editText" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.66"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Passwort"
                android:ems="10"
                android:id="@+id/password_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/plz_editText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Passwort wiederholen"
                android:ems="10"
                android:id="@+id/password2_editText" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/password_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.25"/>
        <Button
                android:text="registrieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_button" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/password2_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.75"
                android:onClick="accountRegistriert"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>