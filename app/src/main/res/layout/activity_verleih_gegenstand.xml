<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerleihGegenstand">

    <AutoCompleteTextView
            android:hint="@string/VerleihGegenstandTextView"
            android:completionThreshold="1"
            android:completionHint="Select an Item"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/VerleihGegenstandTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:textSize="30sp" android:layout_marginEnd="16dp"
            android:inputType="text|textAutoComplete"
            android:layout_marginStart="16dp"
            android:imeOptions="actionNext"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText_VGegenstandAdresse"
            android:textSize="23sp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/VerleihGegenstandTextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:hint="@string/editText_VGegenstandAdresse"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_VGegenstandPLZ"
            android:textSize="23sp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandAdresse"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/editText_VGegenstandPLZ"
            android:imeOptions="actionNext" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/autoCompleteTextView" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.87"/>
    <AutoCompleteTextView
            android:hint="@string/VGegenstandOrtAutoTextView"
            android:layout_width="150dp"
            android:layout_height="50sp"
            android:id="@+id/autoCompleteTextView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandAdresse"
            android:textSize="23sp" android:inputType="text|textAutoComplete"
            android:imeOptions="actionNext"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.77"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="date|number"
            android:ems="10"
            android:id="@+id/editText_VGegenstandDatumVon" android:hint="@string/editText_VDienstDatumVon"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandPLZ"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="23sp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="date|number"
            android:ems="10"
            android:id="@+id/editText_VGegenstandDatumBis" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandDatumVon"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/editText_VDienstDatumBis" android:textSize="23sp" android:layout_marginStart="16dp"/>
    <Button
            android:text="@string/button_submitDienstleistung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_submitGegenstand"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandDatumBis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.78"
            android:onClick="angebotErstellt" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>