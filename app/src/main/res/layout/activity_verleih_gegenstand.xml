<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerleihGegenstand">

    <AutoCompleteTextView
            android:hint="@string/VerleihGegenstandTextView"
            android:completionThreshold="1"
            android:completionHint="Select an Item"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/VerleihGegenstandTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:textSize="30sp" android:layout_marginEnd="80dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText_VGegenstandAdresse"
            android:textSize="23sp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/VerleihGegenstandTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintHorizontal_bias="1.0" android:hint="@string/editText_VGegenstandAdresse"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_VGegenstandPLZ"
            android:textSize="23sp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandAdresse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/autoCompleteTextView"
            app:layout_constraintHorizontal_bias="0.811" android:hint="@string/editText_VGegenstandPLZ"/>
    <AutoCompleteTextView
            android:hint="@string/VGegenstandOrtAutoTextView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/autoCompleteTextView" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandAdresse"
            android:textSize="23sp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_VGegenstandDatumVon" android:hint="@string/editText_VDienstDatumVon"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandPLZ"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="23sp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_VGegenstandDatumBis" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandDatumVon"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:hint="@string/editText_VDienstDatumBis" android:textSize="23sp"/>
    <Button
            android:text="@string/button_submitDienstleistung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_submitGegenstand"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_VGegenstandDatumBis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.752"
            android:onClick="angebotErstellt"/>

</androidx.constraintlayout.widget.ConstraintLayout>